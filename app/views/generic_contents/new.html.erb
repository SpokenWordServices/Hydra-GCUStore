<div class="document">
<div class="document_viewer" id="cover_container">

  <div class="set-controls">
    <!-- holder for create/move set controls -->
  <div class="create">
  	<a href="">Create a new set</a>
  </div>
  <div class="move">
  	<a href="">Move to a new set</a>
  </div>
  </div>
  <div class="content-type-header">
    <h1>Create a Generic Simple Object</h1>
  </div>
  <div class="multipleEdit">
	  
    <%= form_for @generic_content do |f| %>
    <fieldset class="edit-standard">
      <dl>
        <dt><%= label_tag 'generic_content[person][0][namePart]', "Name"%></dt>
        <dd><%= text_field_tag 'generic_content[person][0][namePart]'%></dd>
        <dt><%= label_tag 'generic_content[person][0][role][text]', "Role"%></dt>
        <dd><%= select_tag 'generic_content[person][0][role][text]', options_for_select(ObjectMods.person_relator_terms.values.sort) %></dd>
  	    
        <dt><%= f.label :title %></dt>
        <dd><%= f.text_field :title%></dd>
      </dl>
    </fieldset>
    <fieldset class="edit-standard">
      <dl>
        <dt><%= f.label :topic_tag, "Subject" %></dt>
        <dd><%= f.text_field :topic_tag %></dd>
        <dt><%= f.label :coordinates %></dt>
        <dd><%= f.text_field :coordinates %></dd>
        <dt><%= f.label :rights %></dt>
        <dd><%= f.text_area :rights %></dd>
        <dt><%= f.label :date_valid, "Valid date yyyy or yyyy/yyyy" %></dt>
        <dd><%= f.text_field :date_valid %></dd>
        <dt><%= f.label :description, "Description/abstract" %></dt>
        <dd><%= f.text_area :description %></dd>
      </dl>
  	</fieldset>
    <fieldset class="two-column">
      <dl>
        <dt class="left"><%= f.label :related_item, "Related materials (web)" %></dt>
        <dd class="left"><%= f.text_field :related_item %></dd>
        <dt class="right"><%= f.label :extent %></dt>
        <dd class="right"><%= f.text_field :extent %></dd>
      </dl>
    </fieldset>
    <fieldset class="edit-standard">
     <dl>
      <dt><%= f.label :see_also, "See also (non-web)" %></dt>
      <dd><%= f.text_field :see_also %></dd>
      <dt><%= f.label :publisher %></dt>
      <dd><%= f.text_field :publisher %></dd>
    </dl>
 	 </fieldset>
  <fieldset class="two-column">
    <dl>
      <dt class="left"><%= f.label :lang_text, "Language" %></dt>
      <dd class="left"><%= f.text_field :lang_text %></dd>
      <dt class="right"><%= f.label :lang_code, "Language Code" %></dt>
      <dd class="right"><%= f.text_field :lang_code %></dd>
      <dt class="left"><%= f.label :digital_origin %></dt>
      <dd class="left"><%= f.text_field :digital_origin %></dd>
      <dt class="right"><%= f.label :type_of_resource  %></dt>
      <dd class="right"><%= f.text_field :type_of_resource %></dd>
    </dl>
  </fieldset>
   <fieldset>
     <dl>
      <dt>
    		<%= f.label "Structural Set" %>
  		</dt>
  		<dd>
    		<%= select "Structural Set", "", StructuralSet.tree.options_for_nested_select, :selected=>@generic_content.structural_set, :include_blank=>true, :class=>"structural-set-select"  %>
  		</dd>
      <dt>
        <%= fedora_field_label("RELS-EXT",[:is_member_of], "Display Set") %>
      </dt>
      <dd>
        <%= select "Display Set", "", DisplaySet.tree.options_for_nested_select, :selected=>@generic_content.display_set, :include_blank => true, :class=>"display-set-select"  %>
      </dd> 
      <dt>
        <%= f.label :genre %>
      </dt>
      <dd>
        <%= f.select :genre, options_from_collection_for_select(Genre.all, 'name', 'name')%>
      </dd> 
   </dl>
	</fieldset>
	<div>
    <div class="form-control">
      <%= f.submit "Save" %>
      <%# add a hidden 'pid' so we reclaim the pid that was generated by GenericContent.new %>
      <%= f.hidden_field 'pid' %>
    </div>
  </div>
  <% end %>
  </div>
<div>
</div>
