
<div class="document_viewer" id="cover_container">
  <div class="content-type-header">
    <h1>Create a Generic Simple Object</h1>
  </div>
  <div class="multipleEdit">
		<%= form_for @generic_content do |f| %>
    <fieldset class="edit-standard">
      <dl>
        <dt><%= f.label :title %></dt>
        <dd><%= f.text_field :title%></dd>
      </dl>
		</fieldset>
 		<fieldset class="edit-half">
    <dl>
	  <div class="info-multiple">
	    <div class="left">
				<dt><%= label_tag 'generic_content[person][0][namePart]', "Creator"%></dt>
        <dd><%= text_field_tag 'generic_content[person][0][namePart]'%></dd>
     </div>
	    <div class="right">
		    <dt><%= label_tag 'generic_content[person][0][role][text]', "Role"%></dt>
        <dd><%= select_tag 'generic_content[person][0][role][text]', options_for_select(ObjectMods.person_relator_terms.values.sort) %></dd>
	    </div>
	  </div>
    </dl>
  </fieldset>
  <fieldset class="edit-standard">
		<dl>
			 	<dt>
        	<%= f.label :genre %>
      	</dt>
    	  <dd>
					<% #Sort Genre by name %>
    	    <%= f.select :genre, options_from_collection_for_select(Genre.all.sort{|a,b| a.name <=> b.name }, 'name', 'name')%>
    	  </dd>
		  </dl>
	</fieldset>
	<div>
    <div class="form-control">
      <%= f.submit "Create" %>     
    </div>
  </div>
  <% end %>
  </div>
</div>

