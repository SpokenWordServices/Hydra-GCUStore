<div id="title_div" style="float:left;width:600px;"><h2><%= link_to_document(document, :label => Blacklight.config[:show][:heading].to_sym, :counter => (counter + 1 + @response.params[:start].to_i)) %></h2></div>
<div id="content_div">
	<dl id="index_list">
  	<dt>Resource type</dt>
	<dd>
    <%= document[:genre_t] %>
	</dd>
  <% if document[:subject_topic_t]  %>
     <dt><%= pluralize(document[:subject_topic_t].count + 1,"Subject")[2..-1] %></dt>
       <dd>
         <%= document[:subject_topic_t].uniq.join("; ") %>
       </dd>
   <%end%>
  <% if document[:description_t]  %>
     <dt>Description</dt>
       <dd>
         <%= truncate(document[:description_t].first, :length=>150) %>
       </dd>
	 <% end %>
   <% if document[:language_lang_text_t]  %>
     <dt>Language</dt>
       <dd>
         <%= document[:language_lang_text_t] %>
       </dd>
   <% end %>
  </dl>
</div>

