<form id="document_metadata" action="<%= url_for(:action=>"update", :controller=>"assets", :content_type=>"presentation")%>" method="post" data-resourceType="presentation" accept-charset="utf-8">

<dl>

  <% authors = get_persons_from_roles(@document, ['creator','author']).map {|person| person[:name]}  %>
    <% unless authors.empty? %>
      <dt>
        <%= fedora_field_label("descMetadata", [:person, :namePart], "Author/Creator:") %>
      </dt>
      <dd class="author">
        <%= authors.join(", ") %>
      </dd>
    <% end %>

 <%= display_datastream_field(@document_fedora,"descMetadata", [:description], "Description") %>
 <%= display_datastream_field(@document_fedora,"descMetadata", [:subject, :topic], "Subject") %>

 <% orgs = get_organizations_from_roles(@document, ['creator','author']).map {|organization| organization[:name]}  %>
    <% unless orgs.empty? %>
      <dt>
        <%= fedora_field_label("descMetadata", [:organization, :namePart], "Department:") %>
      </dt>
      <dd class="department">
        <%= orgs.join(", ") %>
      </dd>
 <% end %>

 <%= display_datastream_field(@document_fedora,"rightsMetadata", [:copyright], "Rights") %>
 <%= display_datastream_field(@document_fedora,"descMetadata", [:origin_info, :publisher], "Publisher") %>
 <%= display_datastream_field(@document_fedora,"descMetadata", [:language, :lang_text], "Language") %>


</dl>

</form>
