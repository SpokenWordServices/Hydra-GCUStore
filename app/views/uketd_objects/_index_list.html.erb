<div id="title_div" style="float:left;width:300px;"><h2><%= counter + 1 %>. <%= link_to_document(document, :label => Blacklight.config[:show][:heading].to_sym, :counter => (counter + 1 + @response.params[:start].to_i)) %></h2></div>
<div id="type_div" style="float:right;"><%= (document.get(:medium_t) || document_type(document)).gsub("Hull","") %></div>
<div id="content_div" style="float:left;">
	<dl id="index_list">
  <dt>Title:</dt>
  <dd>
    <%= document.get(:title_info_main_title_t)  %>
  </dd>

  <% authors = get_persons_from_roles(document, ['creator','author']).map {|person| person[:name]}  %>
  <dt>Author(s):</dt>
    <dd>
      <%= authors.join("; ") %>
    </dd>
	<dt>Genre:</dt>
	<dd>
    <%= document.get(:genre_t) %>
	</dd>
  <dt>Subjet:</dt>
    <dd>
      <%#= get_values_from_datastream(@document_fedora,"descMetadata", [:subject, :topic]).join(', ') %>
    </dd>
	</dl>
</div>
